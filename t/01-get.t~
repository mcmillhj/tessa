use strict;
use warnings;

use tessa;
use Test::More tests => 2;
use Plack::Test;
use HTTP::Request::Common;

my $app = tessa->to_app;
is( ref $app, 'CODE', 'Got app' );

my $test = Plack::Test->create($app);
my $res  = $test->request( GET '/' );
use Data::Dumper; 
print Dumper $res;
ok( $res->is_success, '[GET /] successful' );
